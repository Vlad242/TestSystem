{% extends 'base.html.twig' %}
{% block body %}
    <div class="container" align="right">
        <a class="btn btn-primary" href="{{ path('homepage')}}">
            <span class="glyphicon glyphicon glyphicon glyphicon-home" aria-hidden="true"></span> Home</a>
    </div>
    <div class="container" style="margin-top: 20px">
        <table class="table tab-content">
            <thead>
            <tr class="success">
                <th>Id</th>
                <th>Name</th>
                <th>Username</th>
                <th>Role</th>
                <th>Enabled</th>
                <th>Locked</th>
                <th>Enabled/Disabled</th>
                <th>Lock/Unlock</th>
                <th>Edit</th>
            </tr>
            </thead>

            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.name }}</td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.role }}</td>
                    <td>{% if(user.locked == true) %}
                            <span class="glyphicon glyphicon glyphicon glyphicon-ok" aria-hidden="true"></span>
                        {% else %}
                            <span class="glyphicon glyphicon glyphicon glyphicon-remove" aria-hidden="true"></span>
                        {% endif %}
                    </td>
                    <td>{% if(user.enabled == true) %}
                            <span class="glyphicon glyphicon glyphicon glyphicon-ok" aria-hidden="true"></span>
                        {% else %}
                            <span class="glyphicon glyphicon glyphicon glyphicon-remove" aria-hidden="true"></span>
                        {% endif %}
                    </td>

                    <td><a class="btn btn-info " href="{{ path('user_changeLocked' , {'user': user.id})}}">
                            <span class="glyphicon glyphicon glyphicon glyphicon-pencil" aria-hidden="true"></span> Lock/Unlock</a></td>
                    <td><a class="btn btn-info " href="{{ path('user_changeEnabled', {'user': user.id})}}">
                            <span class="glyphicon glyphicon glyphicon glyphicon-pencil" aria-hidden="true"></span> On/off</a></td>
                    <td><a class="btn btn-info " href="{{ path('user_update' , {'id': user.id})}}">
                            <span class="glyphicon glyphicon glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
